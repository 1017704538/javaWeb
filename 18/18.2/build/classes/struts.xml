<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.objectFactory" value="struts" />
	<!-- package必须继承 jfreechart-default-->
	<package name="default" extends="jfreechart-default">
		<action name="chartAction" class="com.hrl.chart.ChartAction">
		    <!-- 返回类型必须是chart，这是固定写法 -->
			<result type="chart">
			   <!-- 配置报表属性 -->
			   <param name="width">600</param>
			   <param name="height">400</param>
			</result>
		</action>
		<action name="chartActionExplode" class="com.hrl.chart.ChartActionExplode">
		    <!-- 返回类型必须是chart，这是固定写法 -->
			<result type="chart">
			    <!-- 配置报表属性 -->
			   <param name="width">600</param>
			   <param name="height">400</param>
			</result>
		</action>
		<action name="chartAction3D" class="com.hrl.chart.ChartAction3D">
		    <!-- 返回类型必须是chart，这是固定写法 -->
			<result type="chart">
			   <!-- 配置报表属性 -->
			   <param name="width">600</param>
			   <param name="height">400</param>
			</result>
		</action>
	</package>
</struts>
